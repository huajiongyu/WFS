
@{
    ViewBag.Title = "Manager";
}

<div id="toolbar">
    <div class="form-inline" role="form">
        <div class="form-group">
            <a class="btn btn-sm btn-primary" href="@Url.Action("Edit")">填写申请</a>
        </div>
    </div>
</div>
<div class="container" style="padding-right: 25px;">
    <table id="example" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>申请单号</th>
                <th>经费类型</th>
                <th>标题</th>
                <th>内容</th>
                <th>附件</th>
                <th>申请日期</th>
                <th>审批状态</th>
                <th>财务处理</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody></tbody>
        <!-- tbody是必须的 -->
    </table>
</div>

@section scripts{

    <script>
        var table;
        var editFlag = false;
        var types = ["预算申请", "报销申请"];
        var StatusList = ["审批通回", "审批中", "审批通过", "转帐完成"];
        $(function () {
            table = $('#example').bootstrapTable({
                url:'@Url.Action("TableData")',
                method: 'post',
                search: true,
                searchAlign: 'right',
                sidePagination: 'client',
                pagination: true,
                checkboxHeader: true,
                toolbar: '#toolbar',
                columns: [
                    {
                        field: 'ID',
                        formatter: function (value, full, index) {
                            var a = '<a target="_blank" href="@(Url.Action("Detail"))?id=' + value + '">' + value + '</a>';
                            return a;
                        }
                    },
                    {
                        field: 'Type',
                        formatter: function (value, full, index) {
                            //if (!value) return '';
                            var a = parseInt(value);
                            return types[a] || '';
                        }
                    },
                    {
                        field:'Title'
                    }, {
                        field: 'Content'
                    }, {
                        field: 'FileName',//附件
                        formatter: function (value, full, index) {
                            if (!value) return '';
                            var a = '<a target="_blank" href="@(Url.Action("DownLoad", "Proposer"))?fid=' + full.FileId.trim() + '">' + value + '</a>';
                            return a;
                        }
                    }, {
                        field: 'CreateTime',
                        formatter: function (value, full, index) {
                            //后台返回的日期格式为/Date(1552197204000)/
                            //所以在显示的时候需要处理一下

                            //过滤空字符的可能
                            if (!value) return "";

                            var reg = /\d+/g;
                            var _t = value.match(reg)[0];
                            var date = new Date(parseInt(_t));
                            return date.format('yyyy-MM-dd');
                        }
                    }, {
                        field: 'Status',
                        formatter: function (value, full, index) {
                            if (!full.PassDate) {
                                return StatusList[value];
                            }
                            var reg = /\d+/g;
                            var _t = full.PassDate.match(reg)[0];
                            var date = new Date(parseInt(_t));
                            return '审核通过<br/>' + date.format('yyyy-MM-dd');
                        }
                    }, {
                        field: 'FinDate',
                        formatter: function (value, full, index) {
                            if (value) {
                                var reg = /\d+/g;
                                var _t = value.match(reg)[0];
                                var date = new Date(parseInt(_t));
                                return '已转帐<br/>' + date.format('yyyy-MM-dd');
                            } else {
                                return '';
                            }
                        }
                    }, {
                        field: 'ID',
                        formatter: function (value, full, index) {
                            var op = [
                                "<a class='btn btn-sm btn-primary' href=\"@(Url.Action("Edit"))?ID=" + value + "\">修改</a>",
                                "&nbsp;",
                                "<button type='button' class='btn btn-sm btn-danger' onclick='del(\"" + value + "\")'>删除</button>"
                            ].join('');
                            return op;
                        }
                    }
                ]
            });
        });

        /**
         * 删除数据
         * @@param name
         */
        function del(_data) {
            var conf = confirm('确定删除吗?');
            if (!conf) return;
            $.ajax({
                url: "@Url.Action("Delete")",
                data: { id: _data },
            method:'post',
            success: function (data) {
                alert(data.message);
                $('#example').bootstrapTable('refresh');
                //console.log("成功" + data);
            }
        });
        }
    </script>
}