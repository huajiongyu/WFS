@model WFS.Models.Settings
@{
    ViewBag.Title = "系统参数设置";
}

<h2>设置</h2>
<form class="form-horizontal" method="post">
    <div class="form-group">
        <label class="control-label col-md-3">审批员审核额度：</label>
        <div class="col-md-9">
            @Html.TextBoxFor(x => x.MaxCost)
            @Html.ValidationMessageFor(x => x.MaxCost)
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-3">总余额：</label>
        <div class="col-md-9">
            @Html.TextBoxFor(x => x.CountOfAll)
            @Html.ValidationMessageFor(x => x.CountOfAll)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
            @Html.HiddenFor(x => x.Id)
            <input type="submit" name="value" value="提交" />
            <p class="text-success">@ViewBag.msg</p>
        </div>
    </div>
</form>

