@model WFS.Models.DeptViewCreateModel

@{
    ViewBag.Title = "EditDept";
}
<link href="~/Scripts/bootstrap-select/css/bootstrap-select.min.css" rel="stylesheet" />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>编辑部门</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">部门名称:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">部门主任:</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Supervisor,(SelectList)ViewBag.UsersSelectList, new {  @class = "form-control selectpicker", data_live_search = "true"  })
                @Html.ValidationMessageFor(model => model.Supervisor, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">

                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("返回", "Index")
</div>
@section scripts{
<script src="~/Scripts/bootstrap-select/js/bootstrap-select.min.js"></script>
}